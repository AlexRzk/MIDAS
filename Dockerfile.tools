FROM python:3.11-slim

WORKDIR /app

# Avoid cache for apt and reduce image size
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Do not assume a requirements.txt exists in the repo root during build;
# dependencies may live in features/ or in a root-level file. We install them at container runtime.
ENTRYPOINT ["/bin/bash", "-c"]
